
     <h1>Books</h1>
      <table>
        <tr class=index-table>
         <th>Title</th>
         <th>Body</th>
         <th colspan="3"></th>
        </tr>
        <% @books.each do |book| %>
         <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to "show", book_path(book.id) %></td>
           <td><%= link_to "edit", edit_book_path(book.id) %></td>
           <td><%= link_to "delete", destroy_books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
         </tr>
        <% end %>
      </table>

    <div>
      <h2>New book</h2>
      <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this book from being saved:
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      <% end %>

      <%= form_with model:@book, local:true do |f| %>
       <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
       </div>
       <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
       </div>
       <div class="actions">
        <%= f.submit 'create book' %>
       </div>
      <% end %>
    </div>